{
	"extends": "tslint:recommended",
	"rules": {
		"indent": [ true, "tabs", 2 ],
		"new-parens": true,
		"no-arg": true,
		"no-bitwise": true,
		"no-conditional-assignment": true,
		"no-consecutive-blank-lines": false,
		"no-console": {
			"severity": "warning",
			"options": [ "debug", "info", "log", "time", "timeEnd", "trace" ]
		}
	},
	"rulesDirectory": [ "path/to/custom/rules/directory/", "another/path/" ]
}